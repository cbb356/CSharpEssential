<Window x:Class="WPFCalculatorMVPClaude.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFCalculatorMVPClaude"
        mc:Ignorable="d"
        Title="Calculator - MVP Pattern" Height="500" Width="350"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">

    <Window.Resources>
        <!-- Button Styles -->
        <Style x:Key="BaseButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#E0E0E0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="NumberButtonStyle" BasedOn="{StaticResource BaseButtonStyle}" TargetType="Button">
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="BorderBrush" Value="#6C757D"/>
            <Setter Property="Foreground" Value="#212529"/>
        </Style>

        <Style x:Key="OperatorButtonStyle" BasedOn="{StaticResource BaseButtonStyle}" TargetType="Button">
            <Setter Property="Background" Value="#007BFF"/>
            <Setter Property="BorderBrush" Value="#0056B3"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style x:Key="EqualsButtonStyle" BasedOn="{StaticResource BaseButtonStyle}" TargetType="Button">
            <Setter Property="Background" Value="#28A745"/>
            <Setter Property="BorderBrush" Value="#1E7E34"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style x:Key="FunctionButtonStyle" BasedOn="{StaticResource BaseButtonStyle}" TargetType="Button">
            <Setter Property="Background" Value="#6C757D"/>
            <Setter Property="BorderBrush" Value="#545B62"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style x:Key="ClearButtonStyle" BasedOn="{StaticResource BaseButtonStyle}" TargetType="Button">
            <Setter Property="Background" Value="#DC3545"/>
            <Setter Property="BorderBrush" Value="#BD2130"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Calculator (MVP Pattern)"
                   FontSize="16" FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10" Foreground="#495057"/>

        <!-- Display -->
        <Border Grid.Row="1" Background="White" BorderBrush="#CED4DA"
                BorderThickness="2" Margin="0,0,0,10">
            <Label Name="DisplayLabel" Content="0"
                   FontSize="28" FontFamily="Consolas"
                   HorizontalContentAlignment="Right"
                   VerticalContentAlignment="Center"
                   Padding="15,0"/>
        </Border>

        <!-- Button Grid -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Row 0: Memory and Clear functions -->
            <Button Grid.Row="0" Grid.Column="0" Content="C"
                    Style="{StaticResource ClearButtonStyle}"
                    Click="ClearButton_Click"
                    ToolTip="Clear (Esc)"/>

            <Button Grid.Row="0" Grid.Column="1" Content="CE"
                    Style="{StaticResource FunctionButtonStyle}"
                    Click="ClearEntryButton_Click"
                    ToolTip="Clear Entry (Del)"/>

            <Button Grid.Row="0" Grid.Column="2" Content="⌫"
                    Style="{StaticResource FunctionButtonStyle}"
                    Click="BackspaceButton_Click"
                    ToolTip="Backspace"/>

            <Button Grid.Row="0" Grid.Column="3" Content="÷"
                    Style="{StaticResource OperatorButtonStyle}"
                    Click="DivideButton_Click"
                    ToolTip="Divide"/>

            <!-- Row 1: 7, 8, 9, × -->
            <Button Grid.Row="1" Grid.Column="0" Content="7"
                    Style="{StaticResource NumberButtonStyle}"
                    Click="NumberButton_Click"/>

            <Button Grid.Row="1" Grid.Column="1" Content="8"
                    Style="{StaticResource NumberButtonStyle}"
                    Click="NumberButton_Click"/>

            <Button Grid.Row="1" Grid.Column="2" Content="9"
                    Style="{StaticResource NumberButtonStyle}"
                    Click="NumberButton_Click"/>

            <Button Grid.Row="1" Grid.Column="3" Content="×"
                    Style="{StaticResource OperatorButtonStyle}"
                    Click="MultiplyButton_Click"
                    ToolTip="Multiply"/>

            <!-- Row 2: 4, 5, 6, − -->
            <Button Grid.Row="2" Grid.Column="0" Content="4"
                    Style="{StaticResource NumberButtonStyle}"
                    Click="NumberButton_Click"/>

            <Button Grid.Row="2" Grid.Column="1" Content="5"
                    Style="{StaticResource NumberButtonStyle}"
                    Click="NumberButton_Click"/>

            <Button Grid.Row="2" Grid.Column="2" Content="6"
                    Style="{StaticResource NumberButtonStyle}"
                    Click="NumberButton_Click"/>

            <Button Grid.Row="2" Grid.Column="3" Content="−"
                    Style="{StaticResource OperatorButtonStyle}"
                    Click="SubtractButton_Click"
                    ToolTip="Subtract"/>

            <!-- Row 3: 1, 2, 3, + -->
            <Button Grid.Row="3" Grid.Column="0" Content="1"
                    Style="{StaticResource NumberButtonStyle}"
                    Click="NumberButton_Click"/>

            <Button Grid.Row="3" Grid.Column="1" Content="2"
                    Style="{StaticResource NumberButtonStyle}"
                    Click="NumberButton_Click"/>

            <Button Grid.Row="3" Grid.Column="2" Content="3"
                    Style="{StaticResource NumberButtonStyle}"
                    Click="NumberButton_Click"/>

            <Button Grid.Row="3" Grid.Column="3" Content="+"
                    Style="{StaticResource OperatorButtonStyle}"
                    Click="AddButton_Click"
                    ToolTip="Add"/>

            <!-- Row 4: ±, 0, ., = -->
            <Button Grid.Row="4" Grid.Column="0" Content="±"
                    Style="{StaticResource FunctionButtonStyle}"
                    Click="ChangeSignButton_Click"
                    ToolTip="Change Sign"/>

            <Button Grid.Row="4" Grid.Column="1" Content="0"
                    Style="{StaticResource NumberButtonStyle}"
                    Click="NumberButton_Click"/>

            <Button Grid.Row="4" Grid.Column="2" Content="."
                    Style="{StaticResource NumberButtonStyle}"
                    Click="DecimalButton_Click"
                    ToolTip="Decimal Point"/>

            <Button Grid.Row="4" Grid.Column="3" Content="="
                    Style="{StaticResource EqualsButtonStyle}"
                    Click="EqualsButton_Click"
                    ToolTip="Equals (Enter)"/>
        </Grid>

        <!-- Instructions -->
        <TextBlock Grid.Row="3" TextWrapping="Wrap"
                   HorizontalAlignment="Center"
                   FontSize="11" Foreground="#6C757D"
                   Margin="0,10,0,0">
            <Run Text="Keyboard shortcuts: Numbers, +, -, *, /, Enter (=), Esc (C), Del (CE), Backspace"/>
            <LineBreak/>
            <Run Text="MVP Pattern: Model (logic) • View (UI) • Presenter (coordination)"/>
        </TextBlock>
    </Grid>
</Window>

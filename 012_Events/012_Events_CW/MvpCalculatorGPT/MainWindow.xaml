<Window x:Class="MvpCalculatorGPT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MvpCalculatorGPT"
        mc:Ignorable="d"
        Title="MVP Calculator" Height="220" Width="300">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Input fields -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
            <TextBox x:Name="FirstNumberTextBox" Width="100" Margin="0,0,10,0"/>
            <TextBox x:Name="SecondNumberTextBox" Width="100"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,5">
            <Button x:Name="AddButton" Content="+" Width="50" Margin="2"/>
            <Button x:Name="SubtractButton" Content="-" Width="50" Margin="2"/>
            <Button x:Name="MultiplyButton" Content="×" Width="50" Margin="2"/>
            <Button x:Name="DivideButton" Content="÷" Width="50" Margin="2"/>
        </StackPanel>

        <!-- Result -->
        <TextBlock Grid.Row="2" x:Name="ResultTextBlock"
                   FontSize="16"
                   FontWeight="Bold"
                   Margin="0,10,0,0"
                   HorizontalAlignment="Center"/>

        <!-- Error -->
        <TextBlock Grid.Row="3" x:Name="ErrorTextBlock"
                   Foreground="Red"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"/>
    </Grid>
</Window>
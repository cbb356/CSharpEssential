<Window x:Class="Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator"
        mc:Ignorable="d"
        Title="Calculator" Height="150" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Input fields -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10,10,0,0">
            <TextBox Name="FirstOperandTextBox" Text="" Width="128" Height="25" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <TextBox Name="SecondOperandTextBox" Margin="10,0,0,0" Text="" Width="128" Height="25" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10,5,0,0">
            <Button x:Name="AddButton" Content="+" Width="59" Margin="0,0,10,0" Click="AddButton_Click"/>
            <Button x:Name="SubtractButton" Content="-" Width="59" Margin="0,0,10,0" Click="SubtractButton_Click"/>
            <Button x:Name="MultiplyButton" Content="×" Width="59" Margin="0,0,10,0" Click="MultiplyButton_Click"/>
            <Button x:Name="DivideButton" Content="÷" Width="59" Margin="0,0,0,0" Click="DivideButton_Click"/>
        </StackPanel>

        <!-- Result and Error-->
        <TextBlock Grid.Row="2" x:Name="ResultTextBlock"
           FontSize="16"
           FontWeight="Bold"
           Margin="0,5,0,0"
           HorizontalAlignment="Center"/>

        <TextBlock Grid.Row="2" x:Name="ErrorTextBlock"
           Foreground="Red"
           FontSize="16"
           FontWeight="Bold"
           Margin="0,5,0,0"
           HorizontalAlignment="Center"/>
    </Grid>
</Window>

<Window x:Class="MyStopwatch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyStopwatch"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="400">
    <Grid>
        <TextBlock x:Name="TimeDisplay" Text="00:00:00.00" FontSize="32" FontFamily="Segoe UI Semibold" TextAlignment="Center" Margin="0,-30,0,0" Height="45" Width="200"/>
        <Button Content="Start" HorizontalAlignment="Left" Margin="55,0,0,30" VerticalAlignment="Bottom" Width="60" Height="20" Click="ButtonStart_Click"/>
        <Button Content="Stop" HorizontalAlignment="Center" Margin="0,0,0,30" VerticalAlignment="Bottom" Width="60" Height="20" Click="ButtonStop_Click"/>
        <Button Content="Reset" HorizontalAlignment="Right" Margin="0,0,55,30" VerticalAlignment="Bottom" Width="60" Height="20" Click="ButtonReset_Click"/>
    </Grid>

</Window>
